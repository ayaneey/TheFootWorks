<!-- Products Section -->
<section id="products">
  <div class="container py-3">
    <div class="row">
      {{#each shoes}}
        <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">
          <div class="card">
            <!-- Put the image of the product here -->
            <img class="card-img-top" src="{{image}}" />
            <div class="card-body">
              <!-- Put the name of the product here -->
              <h6 class="font-weight-bold pt-1">{{name}}</h6>

              <!-- Put the description of the product here -->
              <div class="text-muted description">{{description}}</div>
              <div class="d-flex align-items-center product">
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="far fa-star"></span>
                <span class="far fa-star"></span>
                <span class="far fa-star"></span>
              </div>
              <div
                class="d-flex align-items-center justify-content-between pt-3"
              >
                <!-- Put the description of the product price here -->
                <div class="d-flex flex-column">
                  <div class="h6 font-weight-bold">{{price}}</div>
                </div>
                <div class="btn btn-primary">Buy now</div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>